<Window x:Class="Bank.EditCreditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d" ResizeMode="NoResize" Background="#eeeeee"
        Title="Редактирование информации о кредите" Height="120" Width="600">
    <StackPanel Margin="5">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock FontSize="25" Width="130" Text="Сумма:"/>
            <TextBox Name="SumBox" FontSize="25" Width="444"/>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="SaveBtn" Content="Сохранить" FontSize="15" HorizontalAlignment="Right" Margin="0,0,10,0" Click="SaveBtn_Click"/>
            <Button Name="DeleteBtn" Content="Удалить" FontSize="15" HorizontalAlignment="Right" Margin="0,0,10,0" Click="DeleteBtn_Click"/>
            <Button Name="ExitBtn" Content="Выход" FontSize="15" HorizontalAlignment="Right" Click="ExitBtn_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
