<UserControl x:Class="Bank.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bank"
             mc:Ignorable="d" Name="HeaderElement"
             d:DesignHeight="63" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding ElementName=HeaderElement, Path=HeaderName}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
            <Button Name="BackBtn" Width="60" Height="25" Content="Назвд" VerticalAlignment="Bottom" HorizontalAlignment="Left" Click="BackBtn_Click"/>
            <Border BorderThickness="1" BorderBrush="#aaaaaa" Margin="0,2,0,0"/>
        </StackPanel>

    </Grid>
</UserControl>
